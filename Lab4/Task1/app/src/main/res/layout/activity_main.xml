<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ImageApple"
        android:src="@drawable/apple"
        android:clickable="true"
        android:longClickable="true"
        android:contentDescription="@string/apple"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="EnlargeImageApple" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ImageCheese"
        android:src="@drawable/cheese"
        android:clickable="true"
        android:longClickable="true"
        android:contentDescription="@string/apple"
        android:cropToPadding="false"
        android:layout_alignTop="@+id/ImageApple"
        android:layout_alignParentEnd="true"
        android:onClick="EnlargeImageCheese" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ImagePie"
        android:src="@drawable/pie"
        android:clickable="true"
        android:longClickable="true"
        android:contentDescription="@string/apple"
        android:cropToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="EnlargeImagePie" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ImagePizza"
        android:src="@drawable/pizza"
        android:clickable="true"
        android:longClickable="true"
        android:contentDescription="@string/apple"
        android:cropToPadding="false"
        android:layout_alignBottom="@+id/ImagePie"
        android:layout_alignParentEnd="true"
        android:onClick="EnlargeImagePizza" />
</RelativeLayout>
